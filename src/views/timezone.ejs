<script>
function submit_form()
      {
        
        var time =document.getElementById("time").value;
				
        var regx=/^(2[0-3]|[01]?[0-9]):([0-5]?[0-9])$/;
				if(!time.match(regx))
        {
          alert("false Time");
           
					return false;
        }
			}
